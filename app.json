{
  "expo": {
    "name": "КОРⱯ",
    "slug": "kora",
    "scheme": "kora",
    "version": "1.0.1",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "description": "Application for creating and managing family trees",
    "icon": "./assets/kora.png",
    "splash": {
      "image": "./assets/kora.png",
      "resizeMode": "contain",
      "backgroundColor": "#fcf5e7"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rbaster.kora",
      "buildNumber": "1",
      "newArchEnabled": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "The app needs access to your photos to upload family member images",
        "NSCameraUsageDescription": "The app needs access to the camera to take photos of family members",
        "NSPhotoLibraryAddUsageDescription": "The app needs access to save exported data",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.rbaster.kora",
      "versionCode": 2,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/kora.png",
        "backgroundColor": "#fcf5e7"
      },
      "newArchEnabled": true
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ],
      [
        "expo-document-picker"
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to upload family member images"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7bcb0810-67f4-4d33-9cf3-9d7b19cd995e"
      }
    }
  }
}
